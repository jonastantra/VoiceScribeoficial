{
  "manifest_version": 3,
  "name": "Transcripción de Voz + Resumen IA",
  "version": "1.1",
  "description": "Convierte tu voz a texto y genera resúmenes inteligentes con IA",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Transcripción de Voz + IA"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}